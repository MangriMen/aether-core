{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PluginManifest",
  "type": "object",
  "required": ["metadata", "runtime", "load", "api"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["id", "name", "version", "authors"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9]+([_-]?[a-z0-9]+)*$",
          "minLength": 3,
          "maxLength": 50,
          "description": "Plugin ID: lowercase letters, digits, optional single hyphen or underscore between words"
        },
        "name": {
          "type": "string"
        },
        "version": {
          "type": "string",
          "pattern": "^(\\d+\\.\\d+\\.\\d+.*)$"
        },
        "description": {
          "type": "string"
        },
        "authors": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "license": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "runtime": {
      "type": "object",
      "properties": {
        "allowedHosts": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "allowedPaths": {
          "type": "array",
          "items": {
            "type": "array",
            "minItems": 2,
            "maxItems": 2,
            "items": [
              {
                "type": "string"
              },
              {
                "type": "string"
              }
            ]
          }
        }
      },
      "additionalProperties": false
    },
    "load": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string"
        }
      },
      "oneOf": [
        {
          "properties": {
            "type": {
              "const": "extism"
            },
            "file": {
              "type": "string"
            },
            "memoryLimit": {
              "type": ["integer", "null"]
            }
          },
          "required": ["file"]
        },
        {
          "properties": {
            "lib_path": {
              "type": "string"
            }
          },
          "required": ["libPath"]
        }
      ],
      "additionalProperties": true
    },
    "api": {
      "type": "object",
      "required": ["version"],
      "properties": {
        "version": {
          "type": "string"
        },
        "features": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
