{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ContentFile",
  "type": "object",
  "properties": {
    "contentPath": {
      "type": "string"
    },
    "contentType": {
      "$ref": "#/$defs/ContentType"
    },
    "disabled": {
      "type": "boolean"
    },
    "filename": {
      "type": "string"
    },
    "hash": {
      "type": "string"
    },
    "instanceRelativePath": {
      "type": "string"
    },
    "name": {
      "type": [
        "string",
        "null"
      ]
    },
    "size": {
      "type": "integer",
      "format": "uint64",
      "minimum": 0
    },
    "update": {
      "type": [
        "object",
        "null"
      ],
      "additionalProperties": true
    }
  },
  "required": [
    "contentPath",
    "contentType",
    "disabled",
    "filename",
    "hash",
    "instanceRelativePath",
    "size"
  ],
  "$defs": {
    "ContentType": {
      "type": "string",
      "enum": [
        "mod",
        "datapack",
        "resourcepack",
        "shaderpack"
      ]
    }
  }
}